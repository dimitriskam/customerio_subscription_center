<!doctype html>
<html lang="en">

    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        <title>Subscription Center</title>
    </head>

    <body>
        <div class="container">
            <div class="row d-flex justify-content-center">
                <div class="col-md-6">
                    <h2 class="mt-5 mb-4">[Brand] Subscription Center</h2>
                    <form action="http://localhost:3000/update" method="POST">

                        <% for (section of sections){ %>
                            <h4 class="mt-5 mb-3"><%= section %></h4>
                            <% for(let [key, value] of attributes.entries()){ %>
                                <% if(value && value.section == section){ %>
                                    <% if (value.type == 'field'){ %>
                                        <div class="form-group">
                                            <label for="<%= key %>"><%= value.title %></label>
                                            <% if(value.value){ %>
                                                <input name="<%= key %>" value="<%= value.value %>" type="text" class="form-control" id="<%= key %>" placeholder="<%= value.placeholder %>">
                                            <% } else { %> 
                                                <input name="<%= key %>" type="text" class="form-control" id="<%= key %>" placeholder="<%= value.placeholder %>">
                                            <% } %> 
                                    <% } else if (value.type == 'checkbox'){ %> 
                                        <div class="form-check">
                                            <% if(value.value == 'true'){ %>
                                                <input name="<%= key %>" type="checkbox" class="form-check-input" id="<%= key %>" checked>
                                            <% } else { %> 
                                                <input name="<%= key %>" type="checkbox" class="form-check-input" id="<%= key %>">
                                            <% } %> 
                                            <label for="<%= key %>"><%= value.title %></label>
                                    <% } %>
                                        </div>
                                <% } %>
                            <% } %>
                        <% } %>
                            
                        <hr>
                        
                        <div class="form-check">
                            <% if (attributes.get('unsubscribed') == 'true') { %>
                                <input name="unsubscribed" type="checkbox" class="form-check-input" id="unsubscribed" checked>
                            <% } else { %>
                                <input name="unsubscribed" type="checkbox" class="form-check-input" id="unsubscribed">
                            <% } %>
                            <label class="form-check-label" for="unsubscribed">Unsubscribe from all marketing emails!</label>
                        </div>

                        <!-- Hidden Input Fields -->
                        <input name="customerId" type="text" value="<%= attributes.get('customerId') %>" hidden>
                        <input name="deliveryId" type="text" value="<%= attributes.get('deliveryId') %>" hidden>

                        <button type="submit" class="btn btn-primary mt-5 mb-5">Submit</button>
                    </form>
                </div>
            </div>
        </div>

        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    </body>
</html>